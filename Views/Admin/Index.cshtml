@{
    ViewData["Title"] = "Admin Paneli";
}

@* Sayfa başlığı ve hoş geldiniz mesajı *@
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="display-4">Admin Paneli</h2>
            @if (TempData["msj"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["msj"]
                </div>
            }
            <p class="lead">Hoş geldiniz, admin paneline giriş yaptınız!</p>
        </div>
    </div>

    @* Admin'e özel işlem menüsü *@
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">
                    <h4>Salon Yönetimi</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Salon bilgilerini düzenleyebilir veya silebilirsiniz.</p>
                    <a href="@Url.Action("Index", "Salon")" class="btn btn-primary">Salonları Listele</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">
                    <h4>Çalışan Yönetimi</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Çalışanları ekleyebilir, düzenleyebilir veya silebilirsiniz.</p>
                    <a href="@Url.Action("Index", "Calisan")" class="btn btn-primary">Çalışanları Listele</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">
                    <h4>Randevu Yönetimi</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Randevuları ekleyebilir, düzenleyebilir ve yönetebilirsiniz.</p>
                    <a href="@Url.Action("Index", "Randevu")" class="btn btn-primary">Randevuları Listele</a>
                </div>
            </div>
        </div>
    </div>
</div>
