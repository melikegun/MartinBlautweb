@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Admin Paneli</h1>
        <p class="lead">Salon yönetim sisteminizin kontrol merkezi.</p>
        <hr class="my-4">
    </div>

    <div class="row text-center mt-4">
        <!-- Salon Yönetimi -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Salon Yönetimi</h5>
                    <p class="card-text">Salon bilgilerini görüntüleyin ve yönetin.</p>
                    <a asp-controller="Salon" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-building"></i> Git
                    </a>
                </div>
            </div>
        </div>

        <!-- İşlem Yönetimi -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">İşlem Yönetimi</h5>
                    <p class="card-text">Tüm işlemleri ekleyin, düzenleyin veya silin.</p>
                    <a asp-controller="Islem" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-tasks"></i> Git
                    </a>
                </div>
            </div>
        </div>

        <!-- Çalışan Yönetimi -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Çalışan Yönetimi</h5>
                    <p class="card-text">Çalışanların bilgilerini yönetin.</p>
                    <a asp-controller="Calisan" asp-action="Index" class="btn btn-warning text-white">
                        <i class="fas fa-user-friends"></i> Git
                    </a>
                </div>
            </div>
        </div>

        <!-- Randevu Yönetimi -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Randevu Yönetimi</h5>
                    <p class="card-text">Tüm randevuları kontrol edin.</p>
                    <a asp-controller="Randevu" asp-action="Index" class="btn btn-danger">
                        <i class="fas fa-calendar-alt"></i> Git
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
