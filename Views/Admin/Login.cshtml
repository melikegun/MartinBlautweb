@{
    ViewData["Title"] = "Admin Giriş";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Admin Giriş</h3>
                </div>
                <div class="card-body">
                    <!-- Hata Mesajı -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
                    }

                    <!-- Giriş Formu -->
                    <form method="post" asp-action="Login">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="E-posta adresinizi girin" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Şifrenizi girin" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="#" class="text-muted">Şifrenizi mi unuttunuz?</a>
            </div>
        </div>
    </div>
</div>
