@{
    ViewData["Title"] = "Admin Giriş";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center bg-primary text-white rounded-top">
                    <h3 class="fw-bold">Admin Giriş</h3>
                </div>
                <div class="card-body">
                    <!-- Hata Mesajı -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center mb-4">@ViewBag.ErrorMessage</div>
                    }

                    <!-- Giriş Formu -->
                    <form method="post" asp-action="Login">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="E-posta adresinizi girin" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Şifrenizi girin" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="text-muted">Şifrenizi mi unuttunuz?</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
