@model IEnumerable<MartinBlautweb.Models.Islem>

@{
    ViewData["Title"] = "İşlem Bilgileri";
}

<!-- Kullanıcı Paneline Dön Butonu -->
<div class="container mt-3">
    <a asp-action="Index" asp-controller="Kullanici" class="btn btn-primary btn-lg">
        <i class="fas fa-arrow-left"></i> Kullanıcı Paneline Dön
    </a>
</div>

<!-- Bootstrap 5 ile şık bir tasarım -->
<div class="container mt-5">
 
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Henüz işlem bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">Tüm İşlemler</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>İşlem Adı</th>
                                <th>Ücret</th>
                                <th>Süre</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var islem in Model)
                            {
                                <tr>
                                    <td>@islem.IslemAdi</td>
                                    <td>@islem.Ucret.ToString("C")</td>
                                    <td>@islem.Sure</td>
                                    <td>@(string.IsNullOrEmpty(islem.Aciklama) ? "Açıklama bulunmamaktadır." : islem.Aciklama)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
