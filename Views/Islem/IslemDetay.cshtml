@model MartinBlautweb.Models.Islem

@{
    ViewData["Title"] = "İşlem Detayı";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["msj"] != null)
{
    <div class="alert alert-success">
        @TempData["msj"]
    </div>
}

@if (TempData["hata"] != null)
{
    <div class="alert alert-danger">
        @TempData["hata"]
    </div>
}

<div class="form-group">
    <label asp-for="IslemAdi" class="control-label">İşlem Adı</label>
    <input asp-for="IslemAdi" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Ucret" class="control-label">Ücret</label>
    <input asp-for="Ucret" class="form-control" type="number" step="0.01" readonly />
</div>

<div class="form-group">
    <label asp-for="Sure" class="control-label">Süre (Dakika)</label>
    <input asp-for="Sure" class="form-control" type="number" min="1" readonly />
</div>

<div class="form-group">
    <label asp-for="Aciklama" class="control-label">Açıklama</label>
    <textarea asp-for="Aciklama" class="form-control" readonly></textarea>
</div>

<div class="form-group">
    <a asp-action="Index" class="btn btn-primary">Geri Dön</a>
    <a asp-action="IslemDuzenle" asp-route-id="@Model.IslemID" class="btn btn-warning">Düzenle</a>
    <a asp-action="IslemSil" asp-route-id="@Model.IslemID" class="btn btn-danger"
       data-confirm="Bu işlemi silmek istediğinize emin misiniz?">Sil</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Silme işlemi için onay mekanizması
        $('a[data-confirm]').click(function (e) {
            var message = $(this).attr('data-confirm');
            if (!confirm(message)) {
                e.preventDefault();
            }
        });
    </script>
}
