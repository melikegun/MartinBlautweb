@model MartinBlautweb.Models.Islem

@{
    ViewData["Title"] = "İşlem Düzenle";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["msj"] != null)
{
    <div class="alert alert-success">
        @TempData["msj"]
    </div>
}

@if (TempData["hata"] != null)
{
    <div class="alert alert-danger">
        @TempData["hata"]
    </div>
}

<form asp-action="IslemDuzenle" method="post">
    <!-- Gizli alan ile işlem ID'sini gönderiyoruz -->
    <input asp-for="IslemID" type="hidden" />

    <div class="form-group">
        <label asp-for="IslemAdi" class="control-label">İşlem Adı</label>
        <input asp-for="IslemAdi" class="form-control" />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ucret" class="control-label">Ücret</label>
        <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sure" class="control-label">Süre (Dakika)</label>
        <input asp-for="Sure" class="form-control" type="number" min="1" />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama" class="control-label">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Güncelle</button>
        <a href="@Url.Action("Index", "Islem")" class="btn btn-secondary">İptal</a>
    </div>
</form>
