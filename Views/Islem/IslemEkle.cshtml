@model MartinBlautweb.Models.Islem

@{
    ViewData["Title"] = "Yeni İşlem Ekle";
}

<h1 class="text-center text-primary">@ViewData["Title"]</h1>

@if (TempData["hata"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["hata"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["msj"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["msj"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-lg border-primary">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">Yeni İşlem Ekle</h4>
        </div>
        <div class="card-body">
            <form asp-action="IslemEkle" method="post" novalidate>
                <div class="form-group">
                    <label asp-for="IslemAdi" class="control-label font-weight-bold">İşlem Adı</label>
                    <input asp-for="IslemAdi" class="form-control" placeholder="İşlem adını giriniz" />
                    <span asp-validation-for="IslemAdi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Ucret" class="control-label font-weight-bold">Ücret</label>
                    <input asp-for="Ucret" class="form-control" type="number" step="0.01" placeholder="Ücret giriniz" />
                    <span asp-validation-for="Ucret" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Sure" class="control-label font-weight-bold">Süre (Dakika)</label>
                    <input asp-for="Sure" class="form-control" type="number" min="1" placeholder="Süre giriniz" />
                    <span asp-validation-for="Sure" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Aciklama" class="control-label font-weight-bold">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" placeholder="Açıklamanızı giriniz"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a href="@Url.Action("Index", "Islem")" class="btn btn-secondary btn-lg shadow-sm">
                        <i class="fas fa-times-circle"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
