@model MartinBlautweb.Models.Islem

@{
    ViewData["Title"] = "İşlem Sil";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["msj"] != null)
{
    <div class="alert alert-success">
        @TempData["msj"]
    </div>
}

@if (TempData["hata"] != null)
{
    <div class="alert alert-danger">
        @TempData["hata"]
    </div>
}

<div class="alert alert-warning">
    <h4>Bu işlemi silmek istediğinizden emin misiniz?</h4>
    <p><strong>İşlem Adı:</strong> @Model.IslemAdi</p>
    <p><strong>Ücret:</strong> @Model.Ucret.ToString("C")</p>
    <p><strong>Süre:</strong> @Model.Sure dakika</p>
    <p><strong>Açıklama:</strong> @Model.Aciklama</p>
</div>

<div class="form-group">
    <form asp-action="IslemSil" method="post">
        <input type="hidden" asp-for="IslemID" />
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-secondary">Hayır, İptal Et</a>
    </form>
</div>
