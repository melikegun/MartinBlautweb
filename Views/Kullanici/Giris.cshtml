@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <!-- Giriş Formu -->
                    <form method="post" asp-action="Giris" asp-controller="Kullanici">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="E-posta adresinizi girin" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="sifre" class="form-label">Şifre</label>
                            <input type="password" id="sifre" name="sifre" class="form-control" placeholder="Şifrenizi girin" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    <small>Hesabınız yok mu? <a href="@Url.Action("Kayit", "Kullanici")">Kayıt Ol</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
