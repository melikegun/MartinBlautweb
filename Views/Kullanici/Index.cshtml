@{
    ViewData["Title"] = "Kullanıcı Paneli";
}

<h2>Hoş Geldiniz, @TempData["msj"]!</h2>

@if (TempData["msj"] != null)
{
    <div style="color: green; margin-bottom: 20px;">@TempData["msj"]</div>
}

<p>Giriş yaptıktan sonra aşağıdaki işlemleri gerçekleştirebilirsiniz:</p>

<ul>
    <li><a href="@Url.Action("RandevuEkle", "Randevu")">Randevu Al</a></li>
    <li><a href="@Url.Action("Index", "Randevu")">Randevularımı Görüntüle</a></li>
</ul>

<hr />

<h3>Profil Bilgileriniz</h3>
<table>
    <tr>
        <th>Ad</th>
        <td>@Model.KullaniciAd</td>
    </tr>
    <tr>
        <th>Soyad</th>
        <td>@Model.KullaniciSoyad</td>
    </tr>
    <tr>
        <th>E-posta</th>
        <td>@Model.KullaniciMail</td>
    </tr>
    <tr>
        <th>Telefon</th>
        <td>@Model.KullaniciTelefon</td>
    </tr>
</table>

