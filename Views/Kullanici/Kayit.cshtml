@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="kullaniciAd" class="form-label">Ad</label>
                                <input type="text" id="kullaniciAd" name="KullaniciAd" class="form-control" placeholder="Adınızı girin" required />
                            </div>
                            <div class="col-md-6">
                                <label for="kullaniciSoyad" class="form-label">Soyad</label>
                                <input type="text" id="kullaniciSoyad" name="KullaniciSoyad" class="form-control" placeholder="Soyadınızı girin" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" id="email" name="Email" class="form-control" placeholder="E-posta adresinizi girin" required />
                        </div>

                        <div class="mb-3">
                            <label for="sifre" class="form-label">Şifre</label>
                            <input type="password" id="sifre" name="Sifre" class="form-control" placeholder="Şifrenizi oluşturun" required />
                        </div>

                        <div class="mb-3">
                            <label for="kullaniciTelefon" class="form-label">Telefon</label>
                            <input type="text" id="kullaniciTelefon" name="KullaniciTelefon" class="form-control" placeholder="Telefon numaranızı girin" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus"></i> Kayıt Ol
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    <small>Zaten hesabınız var mı? <a href="#" class="text-success">Giriş Yap</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
