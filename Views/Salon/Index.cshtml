@model MartinBlautweb.Models.Salon

@{
    ViewData["Title"] = "Salon Bilgileri";
}

<h2 class="text-center text-primary">@Model.SalonAdi - Bilgiler</h2>

<!-- Başarı ve hata mesajları için TempData kullanımı -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Admin Paneline Dön Butonu -->
<div class="d-flex justify-content-between">
    <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-primary mt-3"><i class="fas fa-arrow-left"></i> Admin Paneline Dön</a>

</div>
<br />

<!-- Salon Bilgileri -->
<div class="table-responsive mt-4">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Salon ID</th>
                <th>Salon Adı</th>
                <th>Salon Adresi</th>
                <th>Salon Telefon</th>
                <th>Açılış Saati</th>
                <th>Kapanış Saati</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.SalonID</td>
                <td>@Model.SalonAdi</td>
                <td>@Model.SalonAdres</td>
                <td>@Model.SalonTelefon</td>
                <td>@Model.SalonAcilisSaati.ToString(@"hh\:mm")</td>
                <td>@Model.SalonKapanisSaati.ToString(@"hh\:mm")</td>
                <td>
                    <a asp-action="SalonDuzenle" asp-route-id="@Model.SalonID" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Düzenle</a>
                    <a asp-action="SalonDetay" asp-route-id="@Model.SalonID" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Detay</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
