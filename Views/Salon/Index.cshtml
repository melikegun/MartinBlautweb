@model MartinBlautweb.Models.Salon

@{
    ViewData["Title"] = "Salon Bilgileri";
}

<h2>@Model.SalonAdi - Bilgiler</h2>

<!-- Başarı ve hata mesajları için TempData kullanımı -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Salon Bilgileri -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Salon ID</th>
            <th>Salon Adı</th>
            <th>Salon Adresi</th>
            <th>Salon Telefon</th>
            <th>Açılış Saati</th>
            <th>Kapanış Saati</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.SalonID</td>
            <td>@Model.SalonAdi</td>
            <td>@Model.SalonAdres</td>
            <td>@Model.SalonTelefon</td>
            <td>@Model.SalonAcilisSaati.ToString(@"hh\:mm")</td>
            <td>@Model.SalonKapanisSaati.ToString(@"hh\:mm")</td>
            <td>
                <!-- Düzenle Butonu -->
                <a asp-action="SalonDuzenle" asp-controller="Salon" asp-route-id="@Model.SalonID" class="btn btn-warning btn-sm">Düzenle</a>

                <!-- Detay Butonu -->
                <a asp-action="SalonDetay" asp-controller="Salon" asp-route-id="@Model.SalonID" class="btn btn-info btn-sm">Detay</a>

            </td>
        </tr>
    </tbody>
</table>
